{"components/header-tools":"<div class=\"header-tools\">\n  <ul class=\"header-tools-inner\">\n\n    <li class=\"header-tools-item navigation-toggle-mobile-container\">\n      <button class=\"navigation-toggle-mobile-wrapper\">\n        <span class=\"navigation-toggle-mobile\"><i class=\"icon-menu\"></i></span>\n      </button>\n    </li>\n\n    <li class=\"header-tools-item search-toggle\">\n      <a href=\"#\">\n        <i class=\"icon-search\"></i>\n        <span class=\"label\">{{lang 'header.search'}}</span>\n      </a>\n\n      <div class=\"search-form-wrapper\">\n        {{{snippet 'forms_search'}}}\n\n        <form class=\"search-form\" action=\"{{urls.search}}\">\n          <input class=\"search-input\" name=\"search_query\" placeholder=\"{{lang 'header.search'}}\">\n          <button class=\"search-submit\" type=\"submit\">\n            <i class=\"icon-search\"></i>\n            <span class=\"show-for-sr\">\n              {{lang 'search.submit'}}\n            </span>\n          </button>\n        </form>\n      </div>\n    </li>\n\n    <li class=\"header-tools-item cart-toggle {{#if cart.items}}has-cart-items{{/if}}\">\n      <a class=\"cart-preview-trigger\" href=\"#\">\n        <i class=\"icon-cart\"></i>\n        <span class=\"label\">{{lang 'header.cart'}}</span>\n      </a>\n      <div class=\"cart-preview\">\n        {{> components/cart/cart-preview}}\n      </div>\n    </li>\n      <li class=\"header-tools-item\">\n          <a href=\"http://apps.santevia.com/store-finder/\">\n            <i class=\"crew-icon-pin\"></i>\n            <span class=\"label\">STORE FINDER</span>\n          </a>\n          {{#if settings.account_creation_enabled}}\n            {{#if customer}}\n              <a href=\"{{urls.account.index}}\">\n                <i class=\"icon-user\"></i>\n                <span class=\"label\">{{customer.name}}</span>\n              </a>\n              <a href=\"{{urls.auth.logout}}\">\n                <i class=\"crew-icon-lock\"></i>\n                <span class=\"label\">{{lang 'header.log_out'}}</span>\n              </a>\n            {{else}}\n              <a href=\"{{urls.auth.login}}\">\n                <i class=\"crew-icon-lock\"></i>\n                <span class=\"label\">{{lang 'header.log_in'}}</span>\n              </a>\n            {{/if}}\n        {{/if}}\n    </li>\n\n  </ul>\n</div>\n","components/cart/cart-preview":"{{#if cart.items}}<span class=\"cart-count\">{{cart.quantity}}</span>{{/if}}\n\n<div class=\"cart-preview-wrap\">\n\n  {{#if cart.items}}\n    <div class=\"cart-preview-body\">\n      <ul class=\"cart-preview-list\">\n        {{#each cart.items}}\n          <li class=\"cart-preview-list-item\">\n\n            <div class=\"cart-preview-list-item-image-wrap\">\n              <div class=\"cart-preview-list-item-image\">\n                {{#if type '===' 'GiftCertificate'}}\n                  <a href=\"javascript:void(0)\">\n                    <img src=\"{{cdn '/assets/icons/giftcard-image.svg'}}\" alt=\"{{recipient}}\">\n                  </a>\n                {{else}}\n                  <a href=\"{{link}}\">\n                    {{#if image}}\n                      <img src=\"{{getImage image 'product_thumbnail'}}\" alt=\"{{name}}\" />\n                    {{else}}\n                      <img src=\"{{cdn '/assets/icons/icon-no-image.svg'}}\" alt=\"{{lang 'product.no_image'}}\">\n                    {{/if}}\n                  </a>\n                {{/if}}\n              </div>\n            </div>\n\n            <div class=\"cart-preview-list-item-details\">\n              <div class=\"cart-preview-list-item-name\">\n                <a href=\"{{url}}\" alt=\"{{name}}\">{{name}}</a>\n              </div>\n\n              <div class=\"cart-preview-list-item-price\">\n                <span class=\"{{#if price_discounted}}cart-item-discount{{/if}}\">\n                  {{{price.formatted}}} <span class=\"cart-preview-list-item-price-quantity\">&times;{{quantity}}</span>\n                </span>\n\n                {{#if price_discounted}}\n                  <span>\n                    {{price_discounted.formatted}} <span class=\"cart-preview-list-item-price-quantity\">&times;{{quantity}}</span>\n                  </span>\n                {{/if}}\n              </div>\n            </div>\n\n          </li>\n        {{/each}}\n      </ul>\n    </div>\n\n    <div class=\"cart-preview-subtotal\">\n      <div class=\"label\">{{lang 'cart.checkout.subtotal'}}</div>\n      <div class=\"total\">{{cart.sub_total.formatted}}</div>\n    </div>\n\n    <div class=\"cart-preview-footer\">\n      <a href=\"{{urls.cart}}\" class=\"button\">{{lang 'header.view_cart'}}</a>\n      <a href=\"{{urls.checkout.single_address}}\" class=\"button button-alt\">{{lang 'cart.checkout_label'}}</a>\n    </div>\n\n  {{else}}\n    <p class=\"cart-preview-empty\">{{lang \"cart.checkout.empty_cart\"}}</p>\n  {{/if}}\n</div>\n"}
